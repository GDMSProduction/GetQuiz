<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fullsailclass.triviagame">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/triviaself"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SoloScreen" />
        <activity android:name=".MultiplayerScreen" />
        <activity android:name=".SettingsScreen" />
        <activity android:name=".QuestionsScreen" />
        <activity android:name=".CreditsScreen" />
        <activity android:name=".HistoryScreen" />
        <activity android:name=".ScienceScreen" />
        <activity android:name=".MusicScreen" />
        <activity android:name=".GamesScreen" />
        <activity android:name=".EntertainmentScreen" />
        <activity android:name=".SportsScreen" />
        <activity
            android:name=".GameOverPopUp"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".MainMenu"></activity>
    </application>

</manifest>